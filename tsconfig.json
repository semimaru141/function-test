{
  "compilerOptions": {
    "target": "es2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true ,
    "paths": {
      "src/*": ["./src/*"],
    },
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
}
